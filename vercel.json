{
	"version": 2,
	"framework": "angular",

	"installCommand": "bun install",

	"buildCommand": "bun run build shared && bun run build plug && bun run build auth && bun run build admin && bun run build landing",

	"functions": {
		"api/admin.js": {
			"includeFiles": "dist/admin/browser/**"
		},
		"api/plug.js": {
			"includeFiles": "dist/plug/browser/**"
		},
		"api/auth.js": {
			"includeFiles": "dist/auth/browser/**"
		},
		"api/index.js": {
			"includeFiles": "dist/landing/browser/**"
		}
	},

	"rewrites": [
		{
			"source": "/(.*)",
			"has": [
				{
					"type": "host",
					"value": "admin.stundz.com"
				}
			],
			"destination": "/api/admin.js"
		},
		{
			"source": "/(.*)",
			"has": [
				{
					"type": "host",
					"value": "auth.stundz.com"
				}
			],
			"destination": "/api/auth.js"
		},
		{
			"source": "/(.*)",
			"has": [
				{
					"type": "host",
					"value": "plug.stundz.com"
				}
			],
			"destination": "/api/plug.js"
		},
		{
			"source": "/(.*)",
			"destination": "/api/index.js"
		}
	]
}
