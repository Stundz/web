{
	"version": 2,
	"framework": "angular",

	"installCommand": "bun install",

	"buildCommand": "bun run build shared && bun run build plug && bun run build auth",

	"functions": {
		"api/plug.js": {
			"includeFiles": "dist/plug/browser/**"
		},
		"api/auth.js": {
			"includeFiles": "dist/auth/browser/**"
		}
	},

	"rewrites": [
		{
			"source": "/(.*)",
			"has": [
				{
					"type": "host",
					"value": "auth.stundz.com"
				}
			],
			"destination": "/api/auth.js"
		},
		{
			"source": "/(.*)",
			"destination": "/api/plug.js"
		}
	],
	"functions": {
		"api/index.js": {
			"includeFiles": "dist/plug/browser/**"
		}
	}
}
